{
    "name": "hopeseekr/survivecorona",
    "description": "A website to give timely information about the Covid-19 Coronavirus.",
    "type": "project",
    "keywords": [
        "coronavirus",
        "covid",
        "wordpress"
    ],
    "homepage": "https://www.surivecorona.how/",
    "license": "MIT",
    "authors": [
        {
            "name": "Theodore R. Smith",
            "homepage": "https://www.linkedin.com/in/tedrsmith"
        }
    ],
    "require": {
        "php": "^7.4",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "8.*",
        "phpstan/phpstan": "*",
        "friendsofphp/php-cs-fixer": "*",
        "symfony/var-dumper": "*",
        "povils/phpmnd": "*",
        "squizlabs/php_codesniffer": "*"
    },
    "autoload": {
        "psr-4": {
            "SurviveCorona\\" : "src/"
        }
    },
    "autoload-dev": {
        "psr-4": { "SurviveCorona\\Tests\\" : "tests/" }
    },
    "config": {
        "classmap-authoritative": true
    },
    "scripts": {
        "post-create-project-cmd": [
            "php install.php"
        ]
    }
}
